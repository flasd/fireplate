{
    "presets": [
        "react"
    ],

    "plugins": [
        "fast-async",
        "syntax-dynamic-import"
    ],

    "env": {
        "develoment": {
            "presets": [
                ["env", {
                    "targets": {
                        "browsers": "Chrome 62"
                    }
                }]
            ],

            "plugins": [
                "meaningful-logs"
            ]
        },

        "test": {
            "presets": [
                ["env", {
                    "targets": {
                        "node": "current"
                    }
                }]
            ],

            "plugins": [
                "dynamic-import-node"
            ]
        },

        "production": {
            "presets": [
                ["env", {
                    "targets": {
                        "browsers": "> 1%, last 2 versions, ie 8"
                    }
                }],
                "react-optimize"
            ],

            "plugins": [
                "groundskeeper-willie",
                "lodash"
            ]
        }
    }
}