{
    "presets": [
        "react"
    ],
    "plugins": [
        "babel-plugin-root-import",
        "transform-object-rest-spread"
    ],
    "env": {
        "development": {
            "presets": [
                ["env", {
                    "targets": {
                        "browsers": "Chrome 61"
                    }
                }],
            ],
            "plugins": [
                "meaningful-logs"
            ]
        },
        "production": {
            "presets": [
                ["env", {
                    "targets": {
                        "browsers": "> 3%",
                        "node": true
                    }
                }],
                "minify",
                "react-optimize"
            ],
            "plugins": [
                "babel-plugin-loop-optimizer",
                "external-helpers",
                "fast-async",
                "lodash",
                "ramda"
            ]
        },
        "test": {
            "presets": ["env"],
            "plugins": [
                "rewire"
            ]
        }
    }
}
