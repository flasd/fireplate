{
    "presets": [
        "env", "react"
    ],
    "plugins": [
        "babel-plugin-root-import",
        "transform-object-rest-spread",
        "syntax-dynamic-import",
    ],
    "env": {
        "development": {
            "presets": [
                ["env", {
                    "targets": {
                        "browsers": "Chrome 61"
                    }
                }],
            ],
            "plugins": [
                "meaningful-logs"
            ]
        },
        "production": {
            "presets": [
                ["env", {
                    "targets": {
                        "browsers": "> 3%",
                    }
                }],
                "minify",
                "react-optimize"
            ],
            "plugins": [
                "loop-optimizer",
                "fast-async",
                "lodash",
                "ramda"
            ]
        },
        "production:server": {
            "presets": [
                ["env", {
                    "targets": {
                        "node": true
                    }
                }],
                // "minify",
                "react-optimize"
            ],
            "plugins": [
                "dynamic-import-node",
                "loop-optimizer",
                "fast-async",
                "lodash",
                "ramda",
            ]
        },
        "test": {
            "presets": ["env"],
            "plugins": [
                "rewire"
            ]
        }
    }
}
