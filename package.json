{
    "name": "self-boilerplate",
    "version": "0.0.0-alpha-0.3",
    "description": "React SSR ready boilerplate with Code Spliting, CSS Modules and Offline Support.",
    "main": "./functions/index.js",
    "scripts": {
        "build": "npm run build::production:server && cross-env NODE_ENV=production npm run build::production",
        "build::analyze": "cross-env NODE_ENV=development ANALYZE=yep npm run build::production",
        "build::dll": "cross-env NODE_ENV=development TARGET=dll webpack --display-chunks --color --hide-modules",
        "build::production": "webpack --color -p --progress --hide-modules --display-optimization-bailout",
        "build::production:server": "cross-env NODE_ENV=production TARGET=server npm run build::production",
        "build::stats": "cross-env NODE_ENV=development webpack --profile --json > stats.json",
        "clean": "rimraf ./public ./functions/app",
        "deploy": "npm run build && firebase deploy",
        "init::firebase": "firebase init && node ./internals/setup && npm run init::functions",
        "init::functions": "cd functions/ && npm install && cd .. && echo Setup Completed!",
        "lint": "eslint src/**/*.js",
        "postinstall": "npm run build::dll",
        "prebuild": "npm run clean",
        "serve::production": "firebase serve --only=hosting,functions",
        "setup": " rimraf ./.git && git init && git add . && git commit -m \"Initial Commit\" && npm run init::firebase",
        "start": "cross-env NODE_ENV=development webpack-dev-server --progress --color",
        "test::engine": "cross-env NODE_ENV=test nyc -x .engine/**/*.test.js mocha ./.engine/**/*.test.js --compilers js:babel-core/register"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flasd/self-boilerplate.git"
    },
    "keywords": [
        "webpack",
        "boilerplate"
    ],
    "author": "Marcel Coelho",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/flasd/self-boilerplate/issues"
    },
    "homepage": "https://github.com/flasd/self-boilerplate#readme",
    "devDependencies": {
        "add-asset-html-webpack-plugin": "^2.1.2",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-minify-webpack-plugin": "^0.2.0",
        "babel-plugin-dynamic-import-node": "^1.1.0",
        "babel-plugin-lodash": "^3.2.11",
