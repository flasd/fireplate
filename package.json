{
  "name": "webpack-boilerplate",
  "version": "0.0.0-alpha-0.2",
  "description": "webpack boilerplate for speed up dev process",
  "main": "./.engine/initializer.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot --progress",
    "test:engine": "cross-env NODE_ENV=test nyc -x .engine/**/*.test.js mocha ./.engine/**/*.test.js --compilers js:babel-core/register",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack",
    "prebuild:server": "rimraf functions/src",
    "build:server": "cross-env NODE_ENV=production:server babel src -d functions/src --ignore spec.js,test.js",
    "clean": "rimraf dist && rimraf functions/src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flasd/webpack-boilerplate.git"
  },
  "keywords": [
    "webpack",
    "boilerplate"
  ],
  "author": "Marcel Coelho",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flasd/webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/flasd/webpack-boilerplate#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-import-inspector": "^2.0.0",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-loop-optimizer": "^1.4.1",
    "babel-plugin-meaningful-logs": "^1.0.2",
    "babel-plugin-ramda": "^1.4.3",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-minify": "^0.2.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "chai": "^4.1.2",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "enzyme": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb": "^16.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "fast-async": "^6.3.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "mocha": "^3.5.3",
    "node-sass": "^4.5.3",
    "npm-install-webpack-plugin": "^4.0.5",
    "nyc": "^11.2.1",
    "offline-plugin": "^4.8.4",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "postcss-safe-parser": "^3.0.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-config-utils": "^2.3.0",
    "webpack-dev-server": "^2.8.2"
  },
  "dependencies": {
    "express": "^4.15.5",
    "express-session": "^1.15.6",
    "firebase": "^4.4.0",
    "helmet": "^3.8.2",
    "history": "^4.7.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.2.0",
    "react-loadable": "^4.0.5",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "redux": "^3.7.2"
  }
}
