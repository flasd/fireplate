{
    "name": "fireplate",
    "version": "0.0.0-alpha-0.3",
    "description": "React SSR ready boilerplate with Code Spliting, CSS Modules and Offline Support.",
    "main": "./functions/index.js",
    "scripts": {
        "prestart": "cross-env NODE_ENV=development webpack --config ./webpack/dll.config.js",
        "start": "cross-env NODE_ENV=development webpack-dev-server --hot",
        "poststart": "npm run clean",
        "prebuild": "npm test && npm run lint && cross-env NODE_ENV=production webpack --config ./webpack/ssr.config.js",
        "build": "cross-env NODE_ENV=production webpack",
        "postbuild": "npm run covarage",
        "clean": "rimraf ./dist ./functions/app ./webpack/tmp",
        "covarage": "nyc report -x src/**/*.test.js --reporter=text-lcov | coveralls",
        "deploy": "npm run build && firebase deploy && firebase serve",
        "lint": "cross-env NODE_ENV=lint eslint \"src/**\" --ignore-pattern \"src/**/*.test.js\"",
        "test": "cross-env NODE_ENV=test nyc -x src/**/*.test.js mocha src/**/*.test.js --require babel-core/register"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/flasd/fireplate.git"
    },
    "keywords": [
        "webpack",
        "boilerplate"
    ],
    "author": "Marcel Coelho",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/flasd/fireplate/issues"
    },
    "homepage": "https://github.com/flasd/fireplate#readme",
    "devDependencies": {
        "add-asset-html-webpack-plugin": "^2.1.2",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-dynamic-import-node": "^1.2.0",
        "babel-plugin-groundskeeper-willie": "^1.3.2",
        "babel-plugin-meaningful-logs": "^1.0.2",
        "babel-plugin-rewire": "^1.1.0",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-minify": "^0.2.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-react-optimize": "^1.0.1",
        "chai": "^4.1.2",
        "circular-dependency-plugin": "^4.3.0",
        "cross-env": "^5.1.1",
        "css-loader": "^0.28.7",
        "eslint": "^4.13.1",
        "eslint-config-airbnb": "^16.1.0",
        "eslint-import-resolver-webpack": "^0.8.3",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "eslint-plugin-react": "^7.5.1",
        "extract-text-webpack-plugin": "^3.0.2",
        "fast-async": "^6.3.0",
        "file-loader": "^1.1.6",
        "html-loader": "^0.5.1",
        "html-webpack-plugin": "^2.30.1",
        "image-webpack-loader": "^3.4.2",
        "mocha": "^4.0.1",
        "node-sass": "^4.7.2",
        "nyc": "^11.3.0",
        "offline-plugin": "^4.8.5",
        "postcss-loader": "^2.0.9",
        "rimraf": "^2.6.2",
        "sass-loader": "^6.0.6",
        "style-loader": "^0.19.1",
        "uglifyjs-webpack-plugin": "^1.1.4",
        "webpack": "^3.10.0",
        "webpack-bundle-analyzer": "^2.9.1",
        "webpack-dev-server": "^2.9.7",
        "webpack-merge": "^4.1.1"
    },
    "dependencies": {
        "firebase": "^4.8.0",
        "history": "^4.7.2",
        "react": "^16.2.0",
        "react-async-bootstrapper": "^1.1.2",
        "react-async-component": "^1.0.2",
        "react-dom": "^16.2.0",
        "react-helmet": "^5.2.0",
        "react-redux": "^5.0.6",
        "react-router": "^4.2.0",
        "redux": "^3.7.2",
        "redux-catch": "^1.3.1",
        "redux-fire-auth": "^1.0.0-rc.2",
        "redux-promise-middleware": "^5.0.0",
        "serialize-error": "^2.1.0",
        "serialize-javascript": "^1.4.0"
    }
}
