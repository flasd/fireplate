{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "function": "app"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(js|css|jpg|jpeg|gif|png)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, s-maxage=31536000"
                    }
                ]
            }
        ]
    }
}