    "server": {
        "main": "index.js",
        "scripts": {
            "test": "cross-env NODE_ENV=test nyc -x index.test.js mocha index.test.js --require babel-core/register"
        },
        "dependencies": {
            "express": "^4.15.5",
            "express-session": "^1.15.6",
            "firebase-admin": "^5.5.1",
            "firebase-functions": "^0.6.2",
