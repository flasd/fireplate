            "node-sass": "^4.7.2",
            "nyc": "^11.3.0",
            "offline-plugin": "^4.8.5",
            "oldie": "^1.3.0",
            "postcss-cssnext": "^3.0.2",
            "postcss-loader": "^2.0.9",
            "postcss-safe-parser": "^3.0.1",
            "rimraf": "^2.6.2",
            "sass-loader": "^6.0.6",
            "style-loader": "^0.19.1",
            "uglifyjs-webpack-plugin": "^1.1.4",
            "webpack": "^3.10.0",
            "webpack-bundle-analyzer": "^2.9.1",
            "webpack-dev-server": "^2.9.7",
            "webpack-merge": "^4.1.1"
        },
        "dependencies": {
            "bourbon": "^4.3.4",
            "firebase": "^4.8.0",
            "history": "^4.7.2",
            "normalize-scss": "^7.0.0",
            "prop-types": "^15.6.0",
            "react": "^16.2.0",
